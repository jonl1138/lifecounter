<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"
             tools:showIn="@layout/activity_main"
             tools:context=".MainActivity">
    <!-- first row of the table layout-->
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Player 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p1"/>
        <TextView
                android:text="Lives: 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p1_lives"/>
        <Button
                android:text="+"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p11"/>
        <Button
                android:text="-"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p1-1"/>
        <Button
                android:text="+5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p15"/>
        <Button
                android:text="-5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p1-5"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Player 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p2"/>
        <TextView
                android:text="Lives: 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p2_lives"/>
        <Button
                android:text="+"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p21"/>
        <Button
                android:text="-"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p2-1"/>
        <Button
                android:text="+5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p25"/>
        <Button
                android:text="-5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p2-5"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Player 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p3"/>
        <TextView
                android:text="Lives: 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p3_lives"/>
        <Button
                android:text="+"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p31"/>
        <Button
                android:text="-"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p3-1"/>
        <Button
                android:text="+5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p35"/>
        <Button
                android:text="-5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p3-5"/>
    </TableRow>
    <TableRow
            android:id="@+id/row1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        <!-- Add elements/columns in the first row-->
        <TextView
                android:text="Player 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p4"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
        <TextView
                android:text="Lives: 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/p4_lives"/>
        <Button
                android:text="+"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p41"/>
        <Button
                android:text="-"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p4-1"/>
        <Button
                android:text="+5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p45"/>
        <Button
                android:text="-5"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/p4-5"/>

    </TableRow>
    <!-- second row of the table layout-->


</TableLayout>